    "async": "^1.5.2",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "istanbul": "^0.4.5",
    "mocha": "^3.5.1",
    "nodejieba": "^1.4.11",
